<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/green_700"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_picture_zoo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_image_view"
            android:src="@drawable/logo_splash" />

        <TextView
            android:id="@+id/text_view_name_zoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/image_view_picture_zoo"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_view_number_cages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_name_zoo"
            android:layout_below="@id/text_view_name_zoo"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/image_view_picture_zoo"
            android:text="Cages: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_number_animals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_view_number_cages"
            android:layout_below="@id/text_view_number_cages"
            android:layout_marginTop="4dp"
            android:text="Animals: 0"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/text_view_number_janitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_view_number_cages"
            android:layout_below="@id/text_view_number_animals"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/image_view_picture_zoo"
            android:text="Janitors: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_number_veterinaries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_view_number_cages"
            android:layout_below="@+id/text_view_number_feeders"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/text_view_number_janitor"
            android:text="Veterinaries: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view_number_feeders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_number_janitor"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/image_view_picture_zoo"
            android:text="Feeders: 0"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/text_view_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Popularity: 500"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/text_view_popularity"
            android:text="Cash: 7,000 $"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_option_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_news"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_news"
                    android:text="News"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_news"
                android:background="@color/green_600" />

            <RelativeLayout
                android:id="@+id/relative_option_animals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider0"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_animals"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/animals" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_animals"
                    android:text="Animals"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_animals"
                android:background="@color/green_600" />


            <RelativeLayout
                android:id="@+id/relative_option_cages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_cage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_cage"
                    android:text="Cages"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_cages"
                android:background="@color/green_600" />

            <RelativeLayout
                android:id="@+id/relative_option_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_employee"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_employee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_employee"
                    android:text="Employees"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_employee"
                android:background="@color/green_600" />

            <RelativeLayout
                android:id="@+id/relative_option_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider3"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_buy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cart" />

                <ImageView
                    android:id="@+id/ic_expand"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_expand" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_buy"
                    android:text="Market"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_buy"
                android:background="@color/green_600" />

            <LinearLayout
                android:id="@+id/sub_options_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/divider4"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/relative_option_buy_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/ic_buy_animal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="48dp"
                        android:src="@drawable/ic_buy_animal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/ic_buy_animal"
                        android:text="Buy animals"
                        android:textColor="@color/green_600"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/relative_option_buy_animal"
                    android:background="@color/green_600" />

                <RelativeLayout
                    android:id="@+id/relative_option_contract_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/ic_contract_employee"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="48dp"
                        android:src="@drawable/ic_contract" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/ic_contract_employee"
                        android:text="Contract employee"
                        android:textColor="@color/green_600"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/relative_option_buy_animal"
                    android:background="@color/green_600" />

                <RelativeLayout
                    android:id="@+id/relative_option_buy_fruit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/ic_buy_fruit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="48dp"
                        android:src="@drawable/ic_fruit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/ic_buy_fruit"
                        android:text="Buy fruits"
                        android:textColor="@color/green_600"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/sub_options_buy"
                android:background="@color/green_600" />


            <RelativeLayout
                android:id="@+id/relative_option_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider7"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/ic_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/ic_settings"
                    android:text="Settings"
                    android:textColor="@color/green_600"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/relative_option_settings"
                android:background="@color/green_600" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>