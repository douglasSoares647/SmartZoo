<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

    <ImageView
        android:id="@+id/image_view_cage_available"
        android:layout_width="55dp"
        android:layout_height="55dp"/>


    <TextView
        android:id="@+id/text_view_name_cage_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image_view_cage_available"
        android:text="Name"

        />


    <Button
        android:id="@+id/button_add_into_cage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_buy"
        android:text="PUT"
        android:textColor="@color/white"/>

</RelativeLayout>