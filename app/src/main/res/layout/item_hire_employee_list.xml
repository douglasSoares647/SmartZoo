<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/image_view_employee"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/text_view_name_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image_view_employee"
        android:text="Name" />

    <TextView
        android:id="@+id/text_view_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_name_employee"
        android:layout_below="@id/text_view_name_employee"
        android:layout_marginTop="8dp"
        android:text="Profession" />


    <TextView
        android:id="@+id/text_view_price_employee"
        android:text="0,00 $"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/button_hire_employee"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/button_hire_employee"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_buy"
        android:text="HIRE"
        android:textColor="@color/white" />


</RelativeLayout>