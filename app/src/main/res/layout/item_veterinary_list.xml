<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingTop="6dp"
    android:id="@+id/container_relative_veterinary">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_view_veterinary"
        android:layout_width="80dp"
        android:layout_height="80dp"
 />

    <TextView
        android:id="@+id/text_view_name_veterinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_veterinary"
        android:text="Name of veterinary"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_view_age_veterinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_name_veterinary"
        android:layout_below="@+id/text_view_name_veterinary"
        android:layout_marginTop="4dp"
        android:text="22 anos" />

    <TextView
        android:id="@+id/text_view_salary_veterinary"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_age_veterinary"
        android:layout_below="@id/text_view_age_veterinary"
        android:text="Salary: 2000,00 $" />

    <TextView
        android:id="@+id/text_view_status_veterinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_veterinary"
        android:text="Exausto"
        android:layout_below="@+id/text_view_salary_veterinary"
        android:textColor="@color/red_700"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/image_view_salary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/image_view_demission"
    />

    <ImageView
        android:id="@+id/image_view_demission"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
  />

    <TextView
        android:id="@+id/text_view_number_treatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_animals_treatments"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:text=": 0"
        android:textColor="@color/red_700"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_view_animals_treatments"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/image_view_demission"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/text_view_number_treatment"
     />
</RelativeLayout>