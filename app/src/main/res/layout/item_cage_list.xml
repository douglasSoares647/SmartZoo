<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">


    <ImageView
        android:id="@+id/image_view_list_cage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_cage" />

    <TextView
        android:id="@+id/text_view_name_list_cage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image_view_list_cage"
        android:text="Name of cage" />

    <TextView
        android:id="@+id/text_view_status_cage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:layout_below="@id/text_view_name_list_cage"
        android:layout_toRightOf="@id/image_view_list_cage"
        android:text="Clean" />

    <TextView
        android:id="@+id/text_view_capacity_list_cage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_view_list_cage"
        android:text="8 animals"
        android:layout_below="@+id/image_view_type_animal"/>


    <ImageView
        android:id="@+id/image_view_destroy"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/image_view_clean"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/image_view_destroy"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/image_view_type_animal"
        android:layout_toLeftOf="@id/image_view_clean"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"/>


</RelativeLayout>