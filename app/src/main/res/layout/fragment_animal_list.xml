<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_label"
        android:text="@string/animals"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_animals"
        android:layout_below="@id/text_view_label"
        android:layout_above="@id/text_view_label_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>





    <TextView
        android:id="@+id/text_view_label_filter"
        android:layout_above="@+id/spinner_filter_animal"
        android:text="@string/text_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_alignParentBottom="true"
        android:id="@+id/spinner_filter_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

</RelativeLayout>