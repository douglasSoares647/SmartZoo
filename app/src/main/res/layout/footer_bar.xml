<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image_view_start"
        android:background="@drawable/back_controller_time">


    </RelativeLayout>


    <ImageView
        android:id="@+id/image_view_start"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_button_play" />

    <ImageView
        android:id="@+id/image_view_normal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image_view_start"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/image_view_start"
        android:padding="5dp"
        android:src="@drawable/ic_play_normal_button" />


    <ImageView
        android:id="@+id/image_view_forward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image_view_start"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/image_view_normal"
        android:src="@drawable/ic_forward_button" />


    <ImageView
        android:id="@+id/image_view_fast_forward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image_view_start"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/image_view_forward"
        android:padding="5dp"
        android:src="@drawable/ic_fast_foward" />



</RelativeLayout>