<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_view_animal"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:src="@drawable/ic_buy_animal" />


    <TextView
        android:id="@+id/text_view_name_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_animal"
        android:text="Name of Animal"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_view_age_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_name_animal"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/image_view_animal"
        android:text="Age"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_view_health_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_age_animal"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/image_view_animal"
        android:text="Health"
        android:textSize="14sp" />


    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/text_view_cost_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.000"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/spinner_number_buy_animal"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_number_buy_animal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="40dp">


    </Spinner>


</RelativeLayout>