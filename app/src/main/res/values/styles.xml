<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:itemBackground">@color/green_500</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="ProgressStamina" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="@android:indeterminateOnly">false</item>
        <item name="@android:progressDrawable">@drawable/progress_stamina</item>
        <item name="@android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="@android:minHeight">20dip</item>
        <item name="@android:maxHeight">20dip</item>
        <item name="@android:mirrorForRtl">true</item>
    </style>

    <style name="ProgressTaskVeterinary" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="@android:indeterminateOnly">false</item>
        <item name="@android:progressDrawable">@drawable/progress_task_veterinary</item>
        <item name="@android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="@android:minHeight">20dip</item>
        <item name="@android:maxHeight">20dip</item>
        <item name="@android:mirrorForRtl">true</item>
    </style>

    <style name="ProgressTaskFeeder" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="@android:indeterminateOnly">false</item>
        <item name="@android:progressDrawable">@drawable/progress_task_feeder</item>
        <item name="@android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="@android:minHeight">20dip</item>
        <item name="@android:maxHeight">20dip</item>
        <item name="@android:mirrorForRtl">true</item>
    </style>

    <style name="ProgressTaskJanitor" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="@android:indeterminateOnly">false</item>
        <item name="@android:progressDrawable">@drawable/progress_task_janitor</item>
        <item name="@android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="@android:minHeight">20dip</item>
        <item name="@android:maxHeight">20dip</item>
        <item name="@android:mirrorForRtl">true</item>


    </style>


</resources>
